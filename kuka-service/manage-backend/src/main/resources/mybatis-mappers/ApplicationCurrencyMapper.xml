<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camelot.kuka.backend.dao.ApplicationCurrencyDao">

	<resultMap id="BaseResultMap" type="com.camelot.kuka.backend.model.ApplicationCurrency" >
		<result column="id" property="id" />
		<result column="app_id" property="appId" />
		<result column="currency_id" property="currencyId" />
	</resultMap>

	<sql id="Base_Column_List">
			id,
			app_id,
			currency_id
    </sql>

	<delete id="deleteByAppId">
		DELETE FROM
			t_application_currency
		WHERE
			app_id = #{appId}
	</delete>

	<insert id="insertBatch">
		INSERT INTO t_application_currency(
			id,
			app_id,
			currency_id
		)
		VALUES
		<foreach collection="list" item="item" index="index" separator=",">
			(
			#{item.id},
			#{item.appId},
			#{item.currencyId}
			)
		</foreach>
	</insert>

	<select id="selectByAppId" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			t_application_currency
		WHERE
			app_id = #{appId}
	</select>

	<delete id="delCurrency">
		DELETE FROM
			t_application_currency
		WHERE
			app_id = #{appId}
		and
			currency_id = #{currencyAppId}
	</delete>
</mapper>