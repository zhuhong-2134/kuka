<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.camelot.kuka.backend.dao.CommentDao">

	<resultMap id="BaseResultMap" type="com.camelot.kuka.backend.model.Comment" >
		<result column="id" property="id" />
		<result column="order_id" property="orderId" />
		<result column="order_no" property="orderNo" />
		<result column="app_id" property="appId" />
		<result column="comment_desc" property="commentDesc" />
		<result column="comment_url" property="commentUrl" />
		<result column="comment_type" property="commentType" />
		<result column="status" property="status" />
		<result column="adopt_time" property="adoptTime" />
		<result column="del_state" property="delState" typeHandler="com.camelot.kuka.common.mybatis.handler.EnumTypeHandler"/>
		<result column="create_time" property="createTime" />
		<result column="create_by" property="createBy" />
		<result column="update_time" property="updateTime" />
		<result column="update_by" property="updateBy" />
	</resultMap>

	<sql id="Base_Column_List">
                id,
                order_id,
                order_no,
                app_id,
                comment_desc,
                comment_url,
                comment_type,
                status,
                adopt_time,
                del_state,
                create_time,
                create_by,
                update_time,
                update_by
    </sql>

	<select id="queryByOrderIds" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			t_comment
		WHERE
			del_state = 0
			AND
			order_id in
			<foreach collection="array" index="index" item="item" open="(" separator="," close=")">
				#{item}
			</foreach>
	</select>

	<select id="queryByAppId" resultMap="BaseResultMap">
		SELECT
			<include refid="Base_Column_List" />
		FROM
			t_comment
		WHERE
				del_state = 0
			AND app_id = #{appId}
	</select>

	<update id="update">
		UPDATE t_comment
		<set>
			<if test ='null != orderId'>
				order_id = #{orderId},
			</if>
			<if test ='null != orderNo'>
				order_no = #{orderNo},
			</if>
			<if test ='null != appId'>
				app_id = #{appId},
			</if>
			<if test ='null != commentDesc'>
				comment_desc = #{commentDesc},
			</if>
			<if test ='null != commentUrl'>
				comment_url = #{commentUrl},
			</if>
			<if test ='null != commentType'>
				comment_type = #{commentType},
			</if>
			<if test ='null != status'>
				status = #{status},
			</if>
			<if test ='null != adoptTime'>
				adopt_time = #{adoptTime},
			</if>
			<if test ='null != delState'>
				del_state = #{delState, typeHandler=com.camelot.kuka.common.mybatis.handler.EnumTypeHandler},
			</if>
			<if test ='null != createTime'>
				create_time = #{createTime},
			</if>
			<if test ='null != createBy'>
				create_by = #{createBy},
			</if>
			<if test ='null != updateTime'>
				update_time = #{updateTime},
			</if>
			<if test ='null != updateBy'>
				update_by = #{updateBy}
			</if>
		</set>
		WHERE id = #{id}
	</update>
</mapper>